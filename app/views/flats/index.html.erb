<h1>Flats</h1>

<%= link_to "Add a flat", new_flat_path %>

<% @flats.each do |flat| %>
  <p><%= flat.name %></p>
  <p><%= flat.address %></p>
  <p><%= flat.description %></p>
  <p><%= flat.price_per_night %></p>
  <p><%= flat.number_of_guests %></p>
  <%= link_to "More Details", flat_path(flat) %>
  <hr>
<% end %>
